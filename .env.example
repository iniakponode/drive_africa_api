# Safe Drive Africa API - Environment Variables
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production
DEBUG=False

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/drive_safe_db

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# API Configuration
API_V1_PREFIX=/api
PROJECT_NAME=Safe Drive Africa API

# CORS Configuration (for React frontend)
ALLOWED_ORIGINS=https://datahub.safedriveafrica.com,https://www.safedriveafrica.com

# Optional: External Services
# SENTRY_DSN=https://...
# REDIS_URL=redis://localhost:6379/0
